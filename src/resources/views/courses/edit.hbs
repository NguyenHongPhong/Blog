<div class="container">
    <div class='mt-4'>
        <form method='POST' action='/courses/update/{{data._id}}?_method=PUT'>
            <h3>Cập nhật khóa học</h3>
            <div class='form-group mt-4'>
                <label for='name'>Tên khóa học</label>
                <input
                    type='text'
                    class='form-control'
                    name='name'
                    placeholder='Nhập tên khóa học'
                    value="{{data.name}}" />
            </div>

            <div class='form-group mt-4'>
                <label for='description'>Mô tả khóa học</label>
                <textarea
                    type='text'
                    class='form-control'
                    name='description'
                > {{data.description}} </textarea>
            </div>

            <div class='form-group mt-4'>
                <label for='videoId'>Id video</label>
                <input
                    type='text'
                    class='form-control'
                    name='videoId'
                    placeholder='Nhập Id video'
                     value="{{data.videoId}}"/>
            </div>


            <div class='form-group mt-4'>
                <label for='image'>Đường dẫn hình ảnh</label>
                <input
                    type='text'
                    class='form-control'
                    name='image'
                    value="{{data.image}}"/>
            </div>

            <button type='submit' class='btn btn-primary mt-4'>Cập nhật khóa học</button>
        </form>
    </div>
</div>